<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:background="@color/dark_grey"
        android:elevation="16dp"
        android:layout_marginHorizontal="8dp"
        app:cardCornerRadius="15dp"
        android:layout_width="300dp"
        android:layout_height="180dp">


        <RelativeLayout
            android:background="@color/light_dark_grey"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/logo_image"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                android:layout_width="60dp"
                android:layout_height="60dp"/>

            <Button
                android:id="@+id/check_button"
                android:textSize="12dp"
                android:background="@drawable/button_shape2"
                android:textColor="@color/white"
                android:text="check"
                android:layout_marginHorizontal="16dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="16dp"
                android:layout_width="wrap_content"
                android:layout_height="30dp"/>

            <TextView
                android:textColor="@color/white"
                android:id="@+id/industry_name"
                android:fontFamily="@font/font2"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:layout_alignLeft="@id/logo_image"
                android:layout_below="@id/logo_image"
                android:textSize="18dp"
                android:text="Tata Industry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textColor="@color/colorPrimary"
                android:id="@+id/need_list"
                android:text="Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy "
                android:layout_marginTop="8dp"
                android:layout_alignLeft="@id/logo_image"
                android:layout_below="@id/industry_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>




        </RelativeLayout>





    </androidx.cardview.widget.CardView>




</RelativeLayout>